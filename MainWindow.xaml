<Window x:Class="RobsYTDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:converters="clr-namespace:RobsYTDownloader.Converters"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:TitleBar.IsIconVisible="True"
        Title="Rob's YouTube Downloader - v1.2.3"
        Height="700"
        Width="950"
        MinHeight="600"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Topmost="False"
        Activated="Window_Activated">

    <Window.Resources>
        <!-- Converters -->
        <converters:DownloadStatusToVisibilityConverter x:Key="DownloadStatusToVisibilityConverter"/>

        <!-- Consistent Design System Styles -->

        <!-- Primary Controls (46px height) - Main actions -->
        <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="Height" Value="46"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="ui:ControlHelper.CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="TextBox" BasedOn="{StaticResource DefaultTextBoxStyle}">
            <Setter Property="Height" Value="46"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="ui:ControlHelper.CornerRadius" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="ComboBox" BasedOn="{StaticResource DefaultComboBoxStyle}">
            <Setter Property="Height" Value="46"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="ui:ControlHelper.CornerRadius" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- ToggleButton Style (40px height) - Filters with Neutral Colors -->
        <Style TargetType="ToggleButton" BasedOn="{StaticResource DefaultToggleButtonStyle}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="ui:ControlHelper.CornerRadius" Value="6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="MinWidth" Value="80"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseMediumBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Style with Enhanced Visibility -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseLowBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
            <Setter Property="AlternatingRowBackground" Value="{DynamicResource SystemControlBackgroundListLowBrush}"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="RowHeight" Value="48"/>
            <Setter Property="ColumnHeaderHeight" Value="44"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- DataGrid Row Style - Neutral Selection Color -->
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListLowBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundListMediumBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Cell Style - Remove Blue Selection -->
        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Column Header Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="44"/>
        </Style>

        <!-- Small Action Button Style (32px) - DataGrid actions -->
        <Style x:Key="SmallActionButton" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="70"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="ui:ControlHelper.CornerRadius" Value="4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Secondary Button Style (40px) - Secondary actions -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="ui:ControlHelper.CornerRadius" Value="6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="0" Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Notification Banner -->
            <RowDefinition Height="Auto"/> <!-- Top Bar -->
            <RowDefinition Height="Auto"/> <!-- URL Input -->
            <RowDefinition Height="Auto"/> <!-- Quality Selection -->
            <RowDefinition Height="Auto"/> <!-- Video Name & Buttons -->
            <RowDefinition Height="Auto"/> <!-- Progress -->
            <RowDefinition Height="*"/>    <!-- History Tabs -->
        </Grid.RowDefinitions>

        <!-- Success/Error Notification Banner -->
        <Border x:Name="NotificationBar"
                Grid.Row="0"
                Margin="20,20,20,0"
                CornerRadius="6"
                Padding="16,12"
                Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ui:FontIcon x:Name="NotificationIcon"
                             Grid.Column="0"
                             Glyph="&#xE8FB;"
                             FontSize="16"
                             Margin="0,0,12,0"/>

                <StackPanel Grid.Column="1">
                    <TextBlock x:Name="NotificationTitle"
                               Text="Notification"
                               FontWeight="SemiBold"
                               FontSize="13"
                               Margin="0,0,0,2"/>
                    <TextBlock x:Name="NotificationMessage"
                               Text="Message"
                               FontSize="12"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <Button x:Name="CloseNotificationButton"
                        Grid.Column="2"
                        Content="&#xE711;"
                        FontFamily="Segoe MDL2 Assets"
                        Width="24"
                        Height="24"
                        Padding="0"
                        Click="CloseNotificationButton_Click"
                        Background="Transparent"
                        BorderThickness="0"/>
            </Grid>
        </Border>

        <!-- Top Bar with Title and Settings -->
        <Grid Grid.Row="1" Margin="30,20,30,15">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <ui:FontIcon Glyph="&#xE8B2;" FontSize="28" Foreground="{DynamicResource SystemControlForegroundAccentBrush}" Margin="0,0,12,0"/>
                <TextBlock Text="Rob's YouTube Downloader"
                           FontSize="28"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
            </StackPanel>
            <Button x:Name="SettingsButton"
                    HorizontalAlignment="Right"
                    Width="46"
                    Click="SettingsButton_Click"
                    ToolTip="Settings"
                    ui:ControlHelper.CornerRadius="23">
                <ui:FontIcon Glyph="&#xE713;" FontSize="18"/>
            </Button>
        </Grid>

        <!-- URL Input Section with Fetch Button -->
        <Grid Grid.Row="2" Margin="30,0,30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="UrlTextBox"
                     Grid.Column="0"
                     ui:ControlHelper.PlaceholderText="Paste YouTube URL here..."
                     VerticalContentAlignment="Center"
                     Margin="0,0,12,0"
                     TextChanged="UrlTextBox_TextChanged"/>

            <Button x:Name="FetchButton"
                    Grid.Column="1"
                    MinWidth="180"
                    Click="FetchButton_Click"
                    IsEnabled="False">
                <StackPanel Orientation="Horizontal">
                    <ui:FontIcon Glyph="&#xE896;" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="Fetch Qualities"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Quality Selection with Filters and Download Button -->
        <Grid Grid.Row="3" Margin="30,0,30,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Quality Dropdown and Filters - Left Side -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Quality:"
                           FontSize="14"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>

                <ComboBox x:Name="QualityComboBox"
                          Width="300"
                          ui:ControlHelper.PlaceholderText="Select quality..."
                          IsEnabled="False"
                          SelectionChanged="QualityComboBox_SelectionChanged"
                          DisplayMemberPath="DisplayName"/>

                <TextBlock Text="Filters:"
                           FontSize="13"
                           VerticalAlignment="Center"
                           Margin="16,0,10,0"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>

                <ToggleButton x:Name="FilterAllToggle"
                              Content="All"
                              Margin="0,0,8,0"
                              IsChecked="True"
                              Click="FilterToggle_Click"/>

                <ToggleButton x:Name="FilterVideoAudioToggle"
                              Content="Video+Audio"
                              Margin="0,0,8,0"
                              Click="FilterToggle_Click"/>

                <ToggleButton x:Name="FilterVideoOnlyToggle"
                              Content="Video Only"
                              Margin="0,0,8,0"
                              Click="FilterToggle_Click"/>

                <ToggleButton x:Name="FilterAudioOnlyToggle"
                              Content="Audio Only"
                              Click="FilterToggle_Click"/>
            </StackPanel>

            <!-- Download Button - Right Side -->
            <Button x:Name="DownloadButton"
                    Grid.Column="1"
                    MinWidth="160"
                    Click="DownloadButton_Click"
                    IsEnabled="False">
                <StackPanel Orientation="Horizontal">
                    <ui:FontIcon Glyph="&#xE896;" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="Download" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Video Name Display -->
        <Grid Grid.Row="4" Margin="30,0,30,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Video:"
                       FontSize="14"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Margin="0,0,12,0"/>

            <TextBlock x:Name="VideoNameText"
                       Grid.Column="1"
                       Text="No video loaded"
                       FontSize="14"
                       VerticalAlignment="Center"
                       TextTrimming="CharacterEllipsis"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
        </Grid>

        <!-- Progress Section -->
        <Grid Grid.Row="5" Margin="30,0,30,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="StatusText"
                       Grid.Row="0"
                       Text="Ready"
                       FontSize="13"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       Margin="0,0,0,8"
                       TextWrapping="Wrap"/>

            <ProgressBar x:Name="DownloadProgress"
                         Grid.Row="1"
                         Height="6"
                         ui:ControlHelper.CornerRadius="3"
                         Minimum="0"
                         Maximum="100"
                         Value="0"
                         Margin="0,0,0,6"/>

            <TextBlock x:Name="ProgressText"
                       Grid.Row="2"
                       Text=""
                       FontSize="12"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       HorizontalAlignment="Center"/>
        </Grid>

        <!-- History Section with Tabs -->
        <Grid Grid.Row="6" Margin="30,0,30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- History Header with Action Buttons -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <StackPanel Orientation="Horizontal">
                    <ui:FontIcon Glyph="&#xE81C;" FontSize="20" Margin="0,0,8,0"/>
                    <TextBlock Text="History" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="OpenDownloadFolderButton"
                            Content="Open Folder"
                            Style="{StaticResource SecondaryButton}"
                            Margin="0,0,8,0"
                            Click="OpenDownloadFolderButton_Click"/>
                    <Button x:Name="ClearHistoryButton"
                            Content="Clear All"
                            Style="{StaticResource SecondaryButton}"
                            Click="ClearHistoryButton_Click"/>
                </StackPanel>
            </Grid>

            <!-- TabControl for Download History and Video Link History -->
            <TabControl Grid.Row="1">
                <!-- Download History Tab -->
                <TabItem Header="Download History">
                    <Grid>
                        <!-- Download History DataGrid -->
                        <DataGrid x:Name="HistoryDataGrid"
                                  ui:ControlHelper.CornerRadius="6">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" MinWidth="200"/>
                                <DataGridTextColumn Header="Quality" Binding="{Binding Quality}" Width="120"/>
                                <DataGridTextColumn Header="Date" Binding="{Binding DownloadDate, StringFormat='{}{0:MM/dd/yyyy HH:mm}'}" Width="140"/>
                                <DataGridTextColumn Header="Size" Binding="{Binding FileSize}" Width="80"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding StatusText}" Width="250"/>
                                <DataGridTemplateColumn Header="Actions" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="Pause" Click="PauseButton_Click" Tag="{Binding}" Style="{StaticResource SmallActionButton}" Margin="0,0,4,0" Visibility="{Binding DownloadStatus, Converter={StaticResource DownloadStatusToVisibilityConverter}, ConverterParameter=Downloading}"/>
                                                <Button Content="Cancel" Click="CancelButton_Click" Tag="{Binding}" Style="{StaticResource SmallActionButton}" Margin="0,0,4,0" Visibility="{Binding DownloadStatus, Converter={StaticResource DownloadStatusToVisibilityConverter}, ConverterParameter=Downloading|Queued|Paused}"/>
                                                <Button Content="Resume" Click="ResumeButton_Click" Tag="{Binding}" Style="{StaticResource SmallActionButton}" Margin="0,0,4,0" Visibility="{Binding DownloadStatus, Converter={StaticResource DownloadStatusToVisibilityConverter}, ConverterParameter=Paused}"/>
                                                <Button Content="Open" Click="OpenFileButton_Click" Tag="{Binding}" Style="{StaticResource SmallActionButton}" Margin="0,0,4,0" Visibility="{Binding DownloadStatus, Converter={StaticResource DownloadStatusToVisibilityConverter}, ConverterParameter=Completed}"/>
                                                <Button Content="Folder" Click="ShowInFolderButton_Click" Tag="{Binding}" Style="{StaticResource SmallActionButton}" Margin="0,0,4,0" Visibility="{Binding DownloadStatus, Converter={StaticResource DownloadStatusToVisibilityConverter}, ConverterParameter=Completed}"/>
                                                <Button Content="Delete" Click="DeleteFileButton_Click" Tag="{Binding}" Style="{StaticResource SmallActionButton}" Visibility="{Binding DownloadStatus, Converter={StaticResource DownloadStatusToVisibilityConverter}, ConverterParameter=Completed|Failed|Cancelled}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Empty State -->
                        <StackPanel x:Name="EmptyHistoryPanel" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
                            <ui:FontIcon Glyph="&#xE8F1;" FontSize="48" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Margin="0,0,0,12"/>
                            <TextBlock Text="No downloads yet" FontSize="16" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!-- Video Link History Tab -->
                <TabItem Header="Video Link History">
                    <Grid>
                        <!-- Video Link History DataGrid -->
                        <DataGrid x:Name="VideoLinkHistoryDataGrid"
                                  ui:ControlHelper.CornerRadius="6">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date" Binding="{Binding FetchDateFormatted}" Width="140"/>
                                <DataGridTextColumn Header="Video Name" Binding="{Binding Title}" Width="*" MinWidth="250"/>
                                <DataGridTextColumn Header="Quality" Binding="{Binding QualityText}" Width="100"/>
                                <DataGridTemplateColumn Header="Link" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Use" Click="UseVideoLinkButton_Click" Tag="{Binding}" Style="{StaticResource SmallActionButton}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Actions" Width="160">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="Copy" Click="CopyVideoLinkButton_Click" Tag="{Binding}" Style="{StaticResource SmallActionButton}" Margin="0,0,4,0"/>
                                                <Button Content="Remove" Click="RemoveVideoLinkButton_Click" Tag="{Binding}" Style="{StaticResource SmallActionButton}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Empty State for Video Link History -->
                        <StackPanel x:Name="EmptyVideoLinkHistoryPanel" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
                            <ui:FontIcon Glyph="&#xE71B;" FontSize="48" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Margin="0,0,0,12"/>
                            <TextBlock Text="No video links fetched yet" FontSize="16" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay"
              Grid.Row="0"
              Grid.RowSpan="6"
              Background="#DD000000"
              Visibility="Collapsed">
            <Border Background="{DynamicResource SystemControlAcrylicWindowBrush}"
                    CornerRadius="12"
                    Padding="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    ui:ControlHelper.CornerRadius="12">
                <StackPanel>
                    <ui:ProgressRing x:Name="LoadingSpinner"
                                     Width="60"
                                     Height="60"
                                     IsActive="False"/>
                    <TextBlock x:Name="LoadingText"
                               Text="Loading..."
                               FontSize="16"
                               Margin="0,20,0,0"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
