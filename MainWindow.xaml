<Window x:Class="RobsYTDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:converters="clr-namespace:RobsYTDownloader.Converters"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:TitleBar.IsIconVisible="True"
        Title="Rob's YouTube Downloader - v1.1.0"
        Height="700"
        Width="950"
        MinHeight="600"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Topmost="False"
        Activated="Window_Activated">

    <Window.Resources>
        <!-- Converters -->
        <converters:DownloadStatusToVisibilityConverter x:Key="DownloadStatusToVisibilityConverter"/>

        <!-- Styles -->
        <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="ui:ControlHelper.CornerRadius" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource DefaultTextBoxStyle}">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="ui:ControlHelper.CornerRadius" Value="6"/>
        </Style>
        <Style TargetType="ComboBox" BasedOn="{StaticResource DefaultComboBoxStyle}">
            <Setter Property="ui:ControlHelper.CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,10"/>
        </Style>
    </Window.Resources>

    <Grid Margin="0" Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Notification Banner -->
            <RowDefinition Height="Auto"/> <!-- Top Bar -->
            <RowDefinition Height="Auto"/> <!-- URL Input -->
            <RowDefinition Height="Auto"/> <!-- Quality & Download -->
            <RowDefinition Height="Auto"/> <!-- Progress -->
            <RowDefinition Height="*"/>    <!-- Download History -->
        </Grid.RowDefinitions>

        <!-- Success/Error Notification Banner -->
        <Border x:Name="NotificationBar"
                Grid.Row="0"
                Margin="20,20,20,0"
                CornerRadius="6"
                Padding="16,12"
                Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ui:FontIcon x:Name="NotificationIcon"
                             Grid.Column="0"
                             Glyph="&#xE8FB;"
                             FontSize="16"
                             Margin="0,0,12,0"/>

                <StackPanel Grid.Column="1">
                    <TextBlock x:Name="NotificationTitle"
                               Text="Notification"
                               FontWeight="SemiBold"
                               FontSize="13"
                               Margin="0,0,0,2"/>
                    <TextBlock x:Name="NotificationMessage"
                               Text="Message"
                               FontSize="12"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <Button x:Name="CloseNotificationButton"
                        Grid.Column="2"
                        Content="&#xE711;"
                        FontFamily="Segoe MDL2 Assets"
                        Width="24"
                        Height="24"
                        Padding="0"
                        Click="CloseNotificationButton_Click"
                        Background="Transparent"
                        BorderThickness="0"/>
            </Grid>
        </Border>

        <!-- Top Bar with Title and Settings -->
        <Grid Grid.Row="1" Margin="30,20,30,15">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <ui:FontIcon Glyph="&#xE8B2;" FontSize="28" Foreground="{DynamicResource SystemControlForegroundAccentBrush}" Margin="0,0,12,0"/>
                <TextBlock Text="Rob's YouTube Downloader"
                           FontSize="28"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
            </StackPanel>
            <Button x:Name="SettingsButton"
                    HorizontalAlignment="Right"
                    Width="44"
                    Height="44"
                    Click="SettingsButton_Click"
                    ToolTip="Settings"
                    Style="{StaticResource DefaultButtonStyle}"
                    ui:ControlHelper.CornerRadius="22">
                <ui:FontIcon Glyph="&#xE713;" FontSize="18"/>
            </Button>
        </Grid>

        <!-- URL Input Section -->
        <Grid Grid.Row="2" Margin="30,0,30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="UrlTextBox"
                     Grid.Column="0"
                     ui:ControlHelper.PlaceholderText="Paste YouTube URL here..."
                     FontSize="15"
                     VerticalContentAlignment="Center"
                     Height="46"
                     TextChanged="UrlTextBox_TextChanged"/>

            <Button x:Name="DownloadButton"
                    Grid.Column="1"
                    Margin="12,0,0,0"
                    Height="46"
                    MinWidth="140"
                    Click="DownloadButton_Click"
                    IsEnabled="False"
                    Style="{StaticResource AccentButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <ui:FontIcon Glyph="&#xE896;" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="Download" FontSize="14" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Filter Options and Fetch Button -->
        <Grid Grid.Row="3" Margin="30,0,30,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Filter Radio Buttons -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="Show:" FontSize="14" VerticalAlignment="Center" Margin="0,0,12,0" FontWeight="SemiBold"/>
                <RadioButton x:Name="FilterAllRadio" Content="All Formats" GroupName="FormatFilter" IsChecked="True" Margin="0,0,20,0" Checked="FilterRadio_Checked"/>
                <RadioButton x:Name="FilterVideoAudioRadio" Content="Video + Audio" GroupName="FormatFilter" Margin="0,0,20,0" Checked="FilterRadio_Checked"/>
                <RadioButton x:Name="FilterVideoOnlyRadio" Content="Video Only" GroupName="FormatFilter" Margin="0,0,20,0" Checked="FilterRadio_Checked"/>
                <RadioButton x:Name="FilterAudioOnlyRadio" Content="Audio Only" GroupName="FormatFilter" Margin="0,0,20,0" Checked="FilterRadio_Checked"/>

                <Button x:Name="FetchButton"
                        Margin="30,0,0,0"
                        Height="36"
                        MinWidth="140"
                        Click="FetchButton_Click"
                        IsEnabled="False"
                        Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <ui:FontIcon Glyph="&#xE896;" FontSize="14" Margin="0,0,6,0"/>
                        <TextBlock Text="Fetch Qualities" FontSize="13"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Quality Dropdown -->
            <ComboBox x:Name="QualityComboBox"
                      Grid.Row="1"
                      ui:ControlHelper.PlaceholderText="Select quality..."
                      FontSize="15"
                      Height="46"
                      IsEnabled="False"
                      DisplayMemberPath="DisplayName"/>
        </Grid>

        <!-- Progress Section -->
        <Grid Grid.Row="4" Margin="30,0,30,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="StatusText"
                       Grid.Row="0"
                       Text="Ready"
                       FontSize="13"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       Margin="0,0,0,8"
                       TextWrapping="Wrap"/>

            <ProgressBar x:Name="DownloadProgress"
                         Grid.Row="1"
                         Height="6"
                         ui:ControlHelper.CornerRadius="3"
                         Minimum="0"
                         Maximum="100"
                         Value="0"
                         Margin="0,0,0,6"/>

            <TextBlock x:Name="ProgressText"
                       Grid.Row="2"
                       Text=""
                       FontSize="12"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       HorizontalAlignment="Center"/>
        </Grid>

        <!-- Download History Section -->
        <Grid Grid.Row="5" Margin="30,0,30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- History Header -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <StackPanel Orientation="Horizontal">
                    <ui:FontIcon Glyph="&#xE81C;" FontSize="20" Margin="0,0,8,0"/>
                    <TextBlock Text="Download History" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="OpenDownloadFolderButton"
                            Content="Open Folder"
                            Height="32"
                            Padding="12,6"
                            Margin="0,0,8,0"
                            Click="OpenDownloadFolderButton_Click"/>
                    <Button x:Name="ClearHistoryButton"
                            Content="Clear All"
                            Height="32"
                            Padding="12,6"
                            Click="ClearHistoryButton_Click"/>
                </StackPanel>
            </Grid>

            <!-- History DataGrid -->
            <DataGrid x:Name="HistoryDataGrid"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      GridLinesVisibility="None"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}"
                      BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                      BorderThickness="1"
                      ui:ControlHelper.CornerRadius="6">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" MinWidth="200"/>
                    <DataGridTextColumn Header="Quality" Binding="{Binding Quality}" Width="120"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding DownloadDate, StringFormat='{}{0:MM/dd/yyyy HH:mm}'}" Width="140"/>
                    <DataGridTextColumn Header="Size" Binding="{Binding FileSize}" Width="80"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding StatusText}" Width="250"/>
                    <DataGridTemplateColumn Header="Actions" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <!-- Downloading state: Pause + Cancel -->
                                    <Button Content="Pause"
                                            Click="PauseButton_Click"
                                            Tag="{Binding}"
                                            Width="60"
                                            Height="28"
                                            Margin="0,0,4,0"
                                            Padding="8,4"
                                            FontSize="12"
                                            Visibility="{Binding DownloadStatus, Converter={StaticResource DownloadStatusToVisibilityConverter}, ConverterParameter=Downloading}"/>
                                    <Button Content="Cancel"
                                            Click="CancelButton_Click"
                                            Tag="{Binding}"
                                            Width="60"
                                            Height="28"
                                            Padding="8,4"
                                            FontSize="12"
                                            Visibility="{Binding DownloadStatus, Converter={StaticResource DownloadStatusToVisibilityConverter}, ConverterParameter=Downloading|Queued|Paused}"/>

                                    <!-- Paused state: Resume + Cancel -->
                                    <Button Content="Resume"
                                            Click="ResumeButton_Click"
                                            Tag="{Binding}"
                                            Width="60"
                                            Height="28"
                                            Margin="0,0,4,0"
                                            Padding="8,4"
                                            FontSize="12"
                                            Visibility="{Binding DownloadStatus, Converter={StaticResource DownloadStatusToVisibilityConverter}, ConverterParameter=Paused}"/>

                                    <!-- Completed state: Open + Folder + Delete -->
                                    <Button Content="Open"
                                            Click="OpenFileButton_Click"
                                            Tag="{Binding}"
                                            Width="55"
                                            Height="28"
                                            Margin="0,0,4,0"
                                            Padding="8,4"
                                            FontSize="12"
                                            Visibility="{Binding DownloadStatus, Converter={StaticResource DownloadStatusToVisibilityConverter}, ConverterParameter=Completed}"/>
                                    <Button Content="Folder"
                                            Click="ShowInFolderButton_Click"
                                            Tag="{Binding}"
                                            Width="55"
                                            Height="28"
                                            Margin="0,0,4,0"
                                            Padding="8,4"
                                            FontSize="12"
                                            Visibility="{Binding DownloadStatus, Converter={StaticResource DownloadStatusToVisibilityConverter}, ConverterParameter=Completed}"/>
                                    <Button Content="Delete"
                                            Click="DeleteFileButton_Click"
                                            Tag="{Binding}"
                                            Width="55"
                                            Height="28"
                                            Padding="8,4"
                                            FontSize="12"
                                            Visibility="{Binding DownloadStatus, Converter={StaticResource DownloadStatusToVisibilityConverter}, ConverterParameter=Completed|Failed|Cancelled}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Empty State -->
            <StackPanel Grid.Row="1"
                        x:Name="EmptyHistoryPanel"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="Collapsed">
                <ui:FontIcon Glyph="&#xE8F1;" FontSize="48" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" Margin="0,0,0,12"/>
                <TextBlock Text="No downloads yet"
                           FontSize="16"
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay"
              Grid.Row="0"
              Grid.RowSpan="6"
              Background="#DD000000"
              Visibility="Collapsed">
            <Border Background="{DynamicResource SystemControlAcrylicWindowBrush}"
                    CornerRadius="12"
                    Padding="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    ui:ControlHelper.CornerRadius="12">
                <StackPanel>
                    <ui:ProgressRing x:Name="LoadingSpinner"
                                     Width="60"
                                     Height="60"
                                     IsActive="False"/>
                    <TextBlock x:Name="LoadingText"
                               Text="Loading..."
                               FontSize="16"
                               Margin="0,20,0,0"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
